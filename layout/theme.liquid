    <script>
      const showSwatches = document.querySelectorAll('.toggleRemaingSwatches');
      if (showSwatches) {
        showSwatches.forEach(swatch => {
          console.log(swatch);
          swatch.addEventListener('click', function (s) {
            let wrap = swatch.parentElement;
            let hideSwatches = wrap.querySelectorAll('.remaining-swatches');
            s.preventDefault();
            s.stopPropagation();
            s.target.classList.add('hidden');
            hideSwatches.forEach(swt => {
              swt.classList.remove('hidden');
            })
          })
        })
      }
    </script>
    
